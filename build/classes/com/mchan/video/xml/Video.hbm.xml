<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.mchan.video.domain">
	<class name="Video" table="VIDEO">
		<id name="id" type="long" column="ID">
			<generator class="increment" />
		</id>
		<property name="videoId" column="VIDEO_ID" type="string" />
		<property name="videoTitle" column="VIDEO_TITLE" type="string" />
		<property name="creatorName" column="CREATOR_NAME" type="string" />
		<property name="description" column="DESCRIPTION" type="string" length="2000"/>
		<property name="createDate" column="CREATE_DATE" type="string" />
		<property name="updateDate" column="UPDATE_DATE" type="string" />
	</class>
</hibernate-mapping>