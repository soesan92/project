<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.mchan.book.domain">
	<class name="Book" table="BOOK">
		<id name="id" type="long" column="ID">
			<generator class="increment" />
		</id>
		<property name="bookId" column="BOOK_ID" type="string" />
		<property name="bookTitle" column="BOOK_TITLE" type="string" />
		<property name="creatorName" column="CREATOR_NAME" type="string" />
		<property name="description" column="DESCRIPTION" type="string" length="2000"/>
		<property name="sellingSite" column="SELLING_SITE" type="string" length="1000"/>
		<property name="createDate" column="CREATE_DATE" type="string" />
		<property name="updateDate" column="UPDATE_DATE" type="string" />
	</class>
</hibernate-mapping>