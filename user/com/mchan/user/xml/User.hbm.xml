<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.mchan.user.domain">
	<class name="User" table="USER">
		<id name="id" type="long" column="USER_ID">
			<generator class="increment" />
		</id>
		<property name="userName" column="USER_NAME" type="string" />
		<property name="email" column="EMAIL" type="string" />
		<property name="password" column="PASSWORD" type="string" />
		<property name="confPassword" column="CONF_PASSWORD" type="string" />
		<property name="role" column="ROLE" type="short" />
		<property name="createDate" column="CREATE_DATE" type="string" />
		<property name="updateDate" column="UPD_DATE" type="string" />
	</class>
</hibernate-mapping>